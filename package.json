{
  "name": "ssh-portal",
  "version": "1.0.0",
  "description": "SSH Portal - Execute commands on remote servers via SSH",
  "main": "src/index.js",
  "bin": {
    "ssh-portal": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "build": "pkg . --target node18-win-x64 --output dist/ssh-portal.exe",
    "dev": "node src/index.js",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": ["ssh", "terminal", "remote", "command", "portal"],
  "author": "Developer",
  "license": "MIT",
  "dependencies": {
    "ssh2": "^1.15.0",
    "yargs": "^17.7.2",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
